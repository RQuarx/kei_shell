{
    "clangd.arguments": [
        "--header-insertion=never",
        "--compile-commands-dir=target"
    ],
    "mesonbuild.buildFolder": "target",
    "mesonbuild.configureEnvironment": {
        "CXX": "clang++",
        "CXX_LD": "lld",
        "CC_LD": "lld",
        "CC": "clang"
    },

    "editor.rulers": [
        { // Limit for most lines
            "column": 80,
            "color": "#229e73"
        },
        { // Limit for string literals
            "column": 90
        }
    ],

    "editor.experimentalWhitespaceRendering": "svg",
    "C_Cpp.default.compileCommands": "/home/kei/project/kei_shell/target/compile_commands.json",
    "C_Cpp.default.configurationProvider": "mesonbuild.mesonbuild",
}